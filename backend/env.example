# ===========================================
# POS SYSTEM - ENVIRONMENT CONFIGURATION
# ===========================================

# Server Configuration
PORT=5000
NODE_ENV=development
HOST=localhost
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pos-system
DB_NAME=pos-system

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_this_in_production
JWT_REFRESH_EXPIRE=90d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@meccapos.com

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Bit.ly for URL shortening
BITLY_ACCESS_TOKEN=your_bitly_access_token

# Other Services
QR_CODE_BASE_URL=https://yourdomain.com/invoice
